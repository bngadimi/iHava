<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>

<% if @user.itemgroups.any? %>
      <h3>Collections (<%= @user.itemgroups.count %>)</h3>
      <ol class="itemgroups">
        <%= render @itemgroups %>
      </ol>
      <%= will_paginate @itemgroups %>
<% end %>


